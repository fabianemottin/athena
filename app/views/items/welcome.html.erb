      <tr>
        <td><%= link_to category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


  </div>

<div class="col-md-9">

 <% if !user_signed_in? %>
<%= link_to( 'Register', new_user_session_path) %>
<%end%>

<table>
  <thead>
    <tr>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name  + " (" + number_to_currency(item.price) + ")", item %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
